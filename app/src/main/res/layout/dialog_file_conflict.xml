<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/origin_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.1"
        android:text="@string/origin_colon"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/origin_path_text_view"
        app:layout_constraintBottom_toTopOf="@id/target_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/origin_path_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="middle"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/origin_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/origin_text_view"
        app:layout_constraintTop_toTopOf="@+id/origin_text_view" />

    <TextView
        android:id="@+id/target_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/target_colon"
        app:layout_constraintBottom_toTopOf="@id/repeat_for_all_files_checkbox"
        app:layout_constraintEnd_toStartOf="@id/target_path_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/origin_text_view" />

    <TextView
        android:id="@+id/target_path_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="middle"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@id/target_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/target_text_view"
        app:layout_constraintTop_toTopOf="@id/target_text_view" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/repeat_for_all_files_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/do_the_same_with_all_the_files"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/target_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>